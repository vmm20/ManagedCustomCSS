{
    "manifest_version": 2,
    "name": "Managed Custom CSS",
    "description": "This extension applies custom CSS rules set by administrators.",
    "version": "0.1.0",
    "icons": {
        "128": "icons/128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": true,
            "run_at": "document_start",
            "js": ["content.js"]
        }
    ],
    "storage": {
        "managed_schema": "managed_storage.json"
    }
}