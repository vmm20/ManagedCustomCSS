{
    "manifest_version": 3,
    "name": "Managed Custom CSS",
    "description": "This extension applies custom CSS rules set by administrators.",
    "version": "0.2.0",
    "icons": {
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": true,
            "run_at": "document_start",
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "storage": {
        "managed_schema": "managed_storage.json"
    }
}